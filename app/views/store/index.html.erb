      <span class="ranting"><%= app.ranting %></span> 
    </div>
    <div class="price_line">
      <%= button_to 'Add to Cart', line_items_path(app_id: app) %>
      <span class="price"><%= number_to_currency app.price, unit: 'â‚¬' %></span>
    </div>
  </div>
<% end %>
